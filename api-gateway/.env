# ---------------------------------
# Service URLs for kong.yml
# (For local Docker development, these point to other service containers)
# ---------------------------------
AUTH_SERVICE_URL=http://auth-service:3001
CLUB_SERVICE_URL=http://club-service:3002
EVENT_SERVICE_URL=http://event-service:3003
NOTIFY_SERVICE_URL=http://notify-service:3005
API_GATEWAY_SECRET=club-mgmt-internal-secret-2024
CORS_ORIGINS=http://localhost:3000

# ---------------------------------
# Core Kong Configuration
# ---------------------------------
# Run Kong in DB-less mode
KONG_DATABASE=off

# Path to the declarative configuration file inside the container
KONG_DECLARATIVE_CONFIG=/etc/kong/kong.yml

# Custom plugins to load
KONG_PLUGINS=bundled,jwt-claims-headers,api-gateway-secret
KONG_CUSTOM_PLUGINS=jwt-claims-headers,api-gateway-secret

# ---------------------------------
# Performance & Deployment Tuning
# ---------------------------------
# Reduces memory usage for platforms like Render
KONG_NGINX_WORKER_PROCESSES=1

# For local development, you might expose Kong on port 8000
KONG_PROXY_LISTEN=0.0.0.0:8000