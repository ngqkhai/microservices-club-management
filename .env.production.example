# Production Environment Variables Template
# Copy this file to .env.production for production deployment

# Application Environment
NODE_ENV=production

# Database Configuration
DB_HOST=your-production-db-host
DB_PORT=5432
DB_NAME=club_management_prod
DB_USER=your-db-user
DB_PASSWORD=your-secure-db-password

# MongoDB Configuration (for services that use MongoDB)
MONGODB_URI=mongodb://your-mongo-host:27017/club_management_prod

# Redis Configuration
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-min-32-characters
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-min-32-characters
JWT_REFRESH_EXPIRES_IN=7d

# Service Ports
AUTH_SERVICE_PORT=3001
CLUB_SERVICE_PORT=3002
EVENT_SERVICE_PORT=3003
FINANCE_SERVICE_PORT=3004
NOTIFY_SERVICE_PORT=3005
USER_SERVICE_PORT=3006
FRONTEND_PORT=3000

# API Gateway
API_GATEWAY_URL=https://your-domain.com/api
KONG_ADMIN_URL=http://kong:8001

# External APIs
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-production-email
SMTP_PASS=your-production-email-password

# File Upload
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760

# CORS
CORS_ORIGIN=https://your-frontend-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Logging
LOG_LEVEL=warn
LOG_FORMAT=combined

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-super-secure-session-secret-min-32-characters

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_2FA=true

# Production Tools
ENABLE_SWAGGER=false
ENABLE_CORS=true
ENABLE_MORGAN_LOGGING=false

# Health Check
HEALTH_CHECK_INTERVAL=30000

# Performance
MAX_REQUEST_SIZE=1mb
REQUEST_TIMEOUT=30000

# SSL/TLS
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/your-cert.pem
SSL_KEY_PATH=/etc/ssl/private/your-key.pem
