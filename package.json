{
  "name": "club-management-system",
  "version": "1.0.0",
  "description": "Club Management System - Microservices Architecture",
  "scripts": {
    "dev": "docker-compose -f docker-compose.local.yml -f docker-compose.yml --env-file .env.local up -d",
    "dev:build": "docker-compose -f docker-compose.local.yml -f docker-compose.yml --env-file .env.local up -d --build",
    "dev:logs": "docker-compose -f docker-compose.local.yml -f docker-compose.yml --env-file .env.local logs -f",
    "dev:down": "docker-compose -f docker-compose.local.yml -f docker-compose.yml --env-file .env.local down",
    "dev:reset": "docker-compose -f docker-compose.local.yml -f docker-compose.yml --env-file .env.local down -v",
    "build": "docker-compose build",
    "start:db": "docker-compose -f docker-compose.local.yml --env-file .env.local up -d",
    "stop:db": "docker-compose -f docker-compose.local.yml --env-file .env.local down",
    "install:services": "cd services/auth && npm install && cd ../club && npm install && cd ../event && npm install && cd ../notify && npm install && cd ../image && npm install && cd ../../frontend && npm install"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
