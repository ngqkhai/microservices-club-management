# Notification Service Environment Configuration
# Copy this file to .env and fill in the values

# ===========================================
# Environment
# ===========================================
NODE_ENV=development
PORT=3005
SERVICE_NAME=notification-service
SERVICE_VERSION=1.0.0

# ===========================================
# RabbitMQ Configuration
# ===========================================
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_EXCHANGE=club_events
RABBITMQ_QUEUE=notification_events

# ===========================================
# SMTP Email Configuration
# ===========================================
# For Gmail:
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email sender settings
SMTP_FROM_NAME=Club Management System
SMTP_FROM_EMAIL=noreply@clubmanagement.com

# For production (e.g., SendGrid, Mailgun):
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=apikey
# SMTP_PASSWORD=your-sendgrid-api-key

# ===========================================
# Security
# ===========================================
API_GATEWAY_SECRET=your-api-gateway-secret-min-16-chars

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=debug
LOG_DIR=logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d
ENABLE_HEALTH_LOGGING=true

# ===========================================
# Frontend URLs (for email templates)
# ===========================================
FRONTEND_URL=http://localhost:3000

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# Health Check
# ===========================================
HEALTH_CHECK_TIMEOUT_MS=5000

# ===========================================
# Feature Flags
# ===========================================
ENABLE_REQUEST_LOGGING=true
ENABLE_EMAIL_NOTIFICATIONS=true

# Email retry configuration
EMAIL_MAX_RETRIES=3
EMAIL_RETRY_DELAY_MS=5000

