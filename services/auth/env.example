# Auth Service Environment Configuration
# Copy this file to .env and fill in the values

# ===========================================
# Environment
# ===========================================
NODE_ENV=development
PORT=3001
SERVICE_VERSION=1.0.0

# ===========================================
# PostgreSQL Database Configuration
# ===========================================
# Option 1: Use DATABASE_URL (preferred for cloud databases)
DATABASE_URL=postgresql://postgres:postgres_local_dev@localhost:5432/auth_service_db

# Option 2: Individual connection parameters
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=auth_service_db
# DB_USERNAME=postgres
# DB_PASSWORD=postgres_local_dev
# DB_DIALECT=postgres
# DB_LOGGING=false
# DB_SSL=false

# ===========================================
# JWT Configuration (Asymmetric RS256)
# ===========================================
JWT_ALGORITHM=RS256
JWT_PRIVATE_KEY_PATH=./src/config/keys/private.pem
JWT_PUBLIC_KEY_PATH=./src/config/keys/public.pem
JWT_EXPIRES_IN=15m

# Refresh Token (Symmetric)
REFRESH_TOKEN_SECRET=your-refresh-token-secret-at-least-32-characters-long
REFRESH_TOKEN_EXPIRES_IN=7d

# ===========================================
# RabbitMQ Configuration
# ===========================================
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_EXCHANGE=club_events
RABBITMQ_QUEUE=auth_events

# ===========================================
# Frontend URLs
# ===========================================
FRONTEND_BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=debug

# ===========================================
# Security Configuration
# ===========================================
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_TIME_MS=1800000

# Session (for cookie-based sessions if used)
SESSION_SECRET=auth-service-session-secret-change-in-production

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# CORS
# ===========================================
CORS_ORIGIN=http://localhost:3000

# ===========================================
# Health Check
# ===========================================
HEALTH_CHECK_TIMEOUT_MS=5000

# ===========================================
# Debug/Development Flags
# ===========================================
DEBUG_SQL=false
ENABLE_REQUEST_LOGGING=true
AUTO_VERIFY_EMAILS=false

