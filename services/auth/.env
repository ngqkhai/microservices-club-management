# Local Development Environment Variables
NODE_ENV=development
PORT=3001

# Local PostgreSQL Database
DATABASE_URL=postgresql://postgres:postgres_local_dev@postgres:5432/auth_service_db
DB_HOST=postgres
DB_PORT=5432
DB_NAME=auth_service_db
DB_USERNAME=postgres
DB_PASSWORD=postgres_local_dev
DB_DIALECT=postgres
DB_SSL=false

# JWT Configuration
JWT_ALGORITHM=RS256
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=local-dev-refresh-secret-minimum-32-characters-long
REFRESH_TOKEN_EXPIRES_IN=7d

# RabbitMQ
RABBITMQ_URL=amqp://rabbitmq:rabbitmq_local_dev@rabbitmq:5672

# Frontend
FRONTEND_BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Security
API_GATEWAY_SECRET=local-dev-api-gateway-secret-min-16
AUTO_VERIFY_EMAILS=true

# Logging
LOG_LEVEL=debug
