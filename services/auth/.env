# =================================
# Auth Service Configuration
# Centralized configuration with validation
# =================================

# Environment (Required: development, test, production)
NODE_ENV=development

# =================================
# Server Configuration
# =================================
PORT=3001
SERVICE_VERSION=1.0.0

# =================================
# Database Configuration (Required)
# =================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=club_management_auth
DB_USERNAME=postgres
DB_PASSWORD=hanhhui0609
DB_DIALECT=postgres
DB_LOGGING=false
DB_SSL=false

# Test Database Configuration
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=club_management_auth_test
TEST_DB_USERNAME=postgres
TEST_DB_PASSWORD=password

# =================================
# JWT Configuration (Required - Min 32 chars)
# =================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-32chars
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-this-in-production-32chars
REFRESH_TOKEN_EXPIRES_IN=7d

# =================================
# RabbitMQ Configuration
# =================================
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_EXCHANGE=club_events
RABBITMQ_QUEUE=auth_events

# =================================
# Frontend URLs
# =================================
FRONTEND_BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# =================================
# Logging Configuration
# =================================
LOG_LEVEL=info

# =================================
# Security Configuration
# =================================
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_TIME_MS=1800000

# =================================
# Rate Limiting
# =================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =================================
# CORS Configuration
# =================================
CORS_ORIGIN=*

# =================================
# Health Check Configuration
# =================================
HEALTH_CHECK_TIMEOUT_MS=5000

# =================================
# Session Configuration
# =================================
SESSION_SECRET=auth-service-session-secret-change-in-production

# =================================
# Development/Debug Flags
# =================================
DEBUG_SQL=false
ENABLE_REQUEST_LOGGING=true

# =================================
# Configuration Notes:
# =================================
# - JWT_SECRET and REFRESH_TOKEN_SECRET must be at least 32 characters
# - Database configuration is required for all environments
# - Environment must be one of: development, test, production
# - Email functionality is handled by the notification service
# - All timeouts are in milliseconds
# - Boolean values should be 'true' or 'false'
# - CORS_ORIGIN can be '*', a single URL, or comma-separated URLs 