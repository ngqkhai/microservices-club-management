{
	"info": {
		"_postman_id": "us015-leave-event-tests",
		"name": "US-015 Leave Event Tests",
		"description": "Test collection for the Leave Event API endpoint",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
