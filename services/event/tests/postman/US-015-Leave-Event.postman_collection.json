	"item": [
		{
			"name": "Leave Event - Success",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response has success status\", function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData.status).to.eql(\"success\");",
							"});",
							"",
							"pm.test(\"Response has success message\", function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData.message).to.eql(\"Left event successfully\");",
							"});",
							"",
							"pm.test(\"Response contains event data\", function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData.data).to.have.property(\"eventId\");",
							"    pm.expect(jsonData.data).to.have.property(\"userId\");",
							"    pm.expect(jsonData.data).to.have.property(\"leftAt\");",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "X-User-ID",
						"value": "{{user_id}}",
						"type": "text",
						"description": "User ID injected by API Gateway"
					},
					{
						"key": "X-User-Email",
						"value": "{{user_email}}",
						"type": "text",
						"description": "User email injected by API Gateway"
					},
					{
						"key": "X-User-Role",
						"value": "{{user_role}}",
						"type": "text",
						"description": "User role injected by API Gateway"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/events/{{event_id}}/leave",
					"host": ["{{base_url}}"],
					"path": ["api", "events", "{{event_id}}", "leave"]
				}
			},
			"response": []
		},
