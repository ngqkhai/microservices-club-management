# Event Service Environment Configuration
# Copy this file to .env and fill in the values

# ===========================================
# Environment
# ===========================================
NODE_ENV=development
PORT=3003
SERVICE_NAME=event-service
SERVICE_VERSION=1.0.0

# ===========================================
# MongoDB Configuration
# ===========================================
# For local Docker development:
MONGODB_URI=mongodb://event_service:event_service_local_dev@localhost:27017/event_service_db?authSource=event_service_db

# For production (MongoDB Atlas):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/event_service_db

# ===========================================
# RabbitMQ Configuration
# ===========================================
# For local Docker development:
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# For production:
# RABBITMQ_URL=amqps://username:password@rabbitmq-host:5672

RABBITMQ_EXCHANGE=club_events
RABBITMQ_QUEUE=event_events

# ===========================================
# Service URLs
# ===========================================
AUTH_SERVICE_URL=http://auth-service:3001
CLUB_SERVICE_URL=http://club-service:3002

# ===========================================
# Security
# ===========================================
# Must be at least 16 characters
API_GATEWAY_SECRET=your-api-gateway-secret-min-16-chars

# ===========================================
# Logging
# ===========================================
# Options: error, warn, info, debug, verbose
LOG_LEVEL=debug

# ===========================================
# CORS
# ===========================================
CORS_ORIGIN=http://localhost:3000

# ===========================================
# Health Check
# ===========================================
HEALTH_CHECK_TIMEOUT_MS=5000

# ===========================================
# Feature Flags
# ===========================================
ENABLE_REQUEST_LOGGING=true
ENABLE_CRON_JOBS=true

