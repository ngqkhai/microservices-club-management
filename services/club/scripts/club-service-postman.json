{
  "info": {
    "name": "Club Management System API",
    "_postman_id": "club-management-system",
    "description": "API endpoints for Club Management System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3002/health",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3002",
          "path": ["health"]
        },
        "description": "Check service health status"
      }
    },
    {
      "name": "Filter/Search Clubs",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3002/api/clubs?name=tech&type=technical&status=ACTIVE&page=1&limit=10",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3002",
          "path": ["api", "clubs"],
          "query": [
            {
              "key": "name",
              "value": "tech"
            },
            {
              "key": "type",
              "value": "technical"
            },
            {
              "key": "status",
              "value": "ACTIVE"
            },
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "limit",
              "value": "10"
            }
          ]
        },
        "description": "US-005: Filter and search clubs with pagination"
      }
    },
    {
      "name": "Get Club Details",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3002/api/clubs/:id",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3002",
          "path": ["api", "clubs", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "{{club_id}}",
              "description": "ID of the club to fetch"
            }
          ]
        },
        "description": "US-007: Get details of a specific club"
      }
    },
    {
      "name": "Get Club Recruitments",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3002/api/clubs/:id/recruitments",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3002",
          "path": ["api", "clubs", ":id", "recruitments"],
          "variable": [
            {
              "key": "id",
              "value": "{{club_id}}",
              "description": "ID of the club to fetch recruitments for"
            }
          ]
        },
        "description": "US-007: Get recruitment rounds for a specific club"
      }
    },
    {
      "name": "Create Club",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Tech Club\",\n  \"description\": \"A club for tech enthusiasts\",\n  \"type\": \"technical\",\n  \"logo_url\": \"https://example.com/logo.png\",\n  \"website_url\": \"https://techclub.example.com\",\n  \"status\": \"ACTIVE\"\n}"
        },
        "url": {
          "raw": "http://localhost:3002/api/clubs",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3002",
          "path": ["api", "clubs"]
        },
        "description": "Create a new club (requires authentication)"
      }
    },
