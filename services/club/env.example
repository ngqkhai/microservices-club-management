# Club Service Environment Configuration
# Copy this file to .env and fill in the values

# ===========================================
# Environment
# ===========================================
NODE_ENV=development
PORT=3002
SERVICE_NAME=club-service
SERVICE_VERSION=1.0.0

# ===========================================
# MongoDB Configuration
# ===========================================
# For local Docker development:
MONGODB_URI=mongodb://club_service:club_service_local_dev@localhost:27017/club_service_db?authSource=club_service_db

# For production (MongoDB Atlas):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/club_service_db

# ===========================================
# RabbitMQ Configuration
# ===========================================
# For local Docker development:
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# For production:
# RABBITMQ_URL=amqps://username:password@rabbitmq-host:5672

RABBITMQ_EXCHANGE=club_events
RABBITMQ_QUEUE=club_events

# ===========================================
# Service URLs
# ===========================================
AUTH_SERVICE_URL=http://auth-service:3001
AUTH_SERVICE_TIMEOUT=5000
EVENT_SERVICE_URL=http://event-service:3003
EVENT_SERVICE_TIMEOUT=5000

# ===========================================
# Security
# ===========================================
# Must be at least 16 characters
API_GATEWAY_SECRET=your-api-gateway-secret-min-16-chars

# ===========================================
# Logging
# ===========================================
# Options: error, warn, info, debug, verbose
LOG_LEVEL=debug

# ===========================================
# CORS
# ===========================================
# Comma-separated list of allowed origins or * for all
CORS_ORIGIN=http://localhost:3000

# ===========================================
# Health Check
# ===========================================
HEALTH_CHECK_TIMEOUT_MS=5000

# ===========================================
# Feature Flags
# ===========================================
ENABLE_REQUEST_LOGGING=true

