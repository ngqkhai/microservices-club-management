# Image Service Environment Configuration
# Copy this file to .env and fill in the values

# ===========================================
# Environment
# ===========================================
NODE_ENV=development
PORT=3004
SERVICE_NAME=image-service
SERVICE_VERSION=1.0.0

# ===========================================
# Storage Provider
# ===========================================
# Options: auto, cloudinary, minio, s3
# 'auto' will detect based on which credentials are configured
STORAGE_PROVIDER=auto

# ===========================================
# Cloudinary Configuration (Production)
# ===========================================
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# ===========================================
# MinIO Configuration (Local Development)
# ===========================================
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin_local_dev
MINIO_BUCKET_NAME=club-management
MINIO_USE_SSL=false

# ===========================================
# RabbitMQ Configuration
# ===========================================
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_EXCHANGE=club_events

# ===========================================
# Security
# ===========================================
# Must be at least 16 characters
API_GATEWAY_SECRET=your-api-gateway-secret-min-16-chars

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=debug

# ===========================================
# Upload Configuration
# ===========================================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# ===========================================
# CORS
# ===========================================
CORS_ORIGIN=http://localhost:3000

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# Health Check
# ===========================================
HEALTH_CHECK_TIMEOUT_MS=5000

# ===========================================
# Feature Flags
# ===========================================
ENABLE_REQUEST_LOGGING=true

